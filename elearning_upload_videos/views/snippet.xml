<odoo>
    <template id="snippet_video" name="Features">
        <section class="snippet_video">
            <div class="container">
                <div class="row">
                    <!-- Video Upload Form -->
                    <form enctype="multipart/form-data" method="post" action="/website/form/upload/url">
                        <input type="file" name="video_file" accept="video/*"/>
                        <button type="submit">Upload Video</button>
                    </form>
                </div>
            </div>
        </section>
    </template>
    <odoo>
    <template id="assets_frontend_video" inherit_id="website.assets_frontend" name="Video Assets">
        <xpath expr="." position="inside">
            <!-- Video.js CSS -->
            <link href="//vjs.zencdn.net/8.3.0/video-js.min.css" rel="stylesheet"/>

            <!-- Video.js JavaScript -->
            <script src="//vjs.zencdn.net/8.3.0/video.min.js"></script>
        </xpath>
    </template>
</odoo>


    <template id="snippet_local_video" inherit_id="website.snippets" name="new video">
        <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
            <t t-snippet="elearning_upload_videos.snippet_video"
               t-thumbnail="elearning_upload_videos/static/img/logo.png"/>
        </xpath>
    </template>
</odoo>
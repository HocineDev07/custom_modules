<odoo>
    <data>

        <record id="view_dev_patient_tree" model="ir.ui.view">
            <field name="name">dev_hospital.patient.tree</field>
            <field name="model">dev_hospital.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="reference"/>
                    <field name="name"/>
                    <field name="responsible_id"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="appointment_count"/>
                </tree>
            </field>
        </record>

        <record id="view_dev_hospital_patient_form" modal="ir.ui.view">
            <field name="name">dev_hospital.patient.form</field>
            <field name="model">dev_hospital.patient</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="reference" readonly="1"/>
                            </h1>
                        </div>
                    </sheet>
                    <group>
                        <group>
                            
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_dev_hospital_patient">
            <field name="name">Patients</field>
            <field name="res_model">dev_hospital.patient</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first patient!
                </p>
            </field>
        </record>

        <menuitem
                name="Dev Hospital"
                id="dev_hospital.menu_root"
                sequence="10">
            <menuitem
                    name="Patients"
                    id="dev_hospital.patient_root"
                    sequence="10">
                <menuitem
                        name="Patients"
                        id="dev_hospital.patient"
                        sequence="10"
                        action="action_dev_hospital_patient">
                </menuitem>
            </menuitem>
            <menuitem
                    name="Appointments"
                    id="dev_hospital.appointment_root"
                    sequence="10">
                <menuitem
                        name="Appointments"
                        id="dev_hospital.appointment"
                        sequence="10">
                </menuitem>
            </menuitem>
        </menuitem>

    </data>
</odoo>